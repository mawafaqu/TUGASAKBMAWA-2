<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/birumuda"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="26dp"
        tools:context=".view.activation.RegisterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:src="@drawable/ic_welcome_logo"
                android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="60dp">
            </ImageView>

            <EditText
                android:id="@+id/username"
                android:hint="@string/hintuser"
                android:textColorHint="@color/putih"
                android:backgroundTint="@color/putih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_below="@id/logo"/>
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/username"
                android:hint="@string/hintpas"
                android:textColorHint="@color/putih"
                android:backgroundTint="@color/putih"/>
            <Button
                android:id="@+id/login"
                style="@style/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pass"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/or"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/login"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/putih"
                android:text="OR"
                android:textSize="15dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/biruputih"
                android:drawableLeft="@drawable/ic_welcome_fb_login"
                android:gravity="center"
                android:paddingLeft="70dp"
                android:paddingRight="40dp"
                android:text="Connect With Facebook"
                android:textColor="@color/putih" />

            <TextView
                android:id="@+id/textreg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Doesn't Have Account? Register"
                android:textColor="@color/putih"
                android:paddingTop="20dp"

                android:layout_gravity="center"
                />




        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>